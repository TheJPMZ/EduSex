#:import utils kivy.utils


<Genero>:
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, .6
            Image:
                size_hint: .5, .5
                source: 'images/Iteracion 400 del logo edusex.png'

        Label:
            text: 'Ingresa tu GÃ©nero'
            font_size: '20sp'
            color: 0,0,0,1
            size_hint: 1, .2

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 50,50,50,70
            RoundedButton:
                text: 'Masculino'
                on_press: root.save_gender("M")
            RoundedButton:
                text: "Femenino"
                on_press: root.save_gender("F")
            RoundedButton:
                text: 'Otro'
                on_press: root.save_gender("O")
