#:import utils kivy.utils


<Genero>:
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, .6
            Button:
                size_hint: .2, .2
                text: 'Logo'
        Label:
            text: 'Ingresa tu GÃ©nero'
            font_size: '20sp'
            size_hint: 1, .2

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 50,50,50,70
            RoundedButton:
                text: 'Masculino'
                on_press: root.save_gender("M")
            RoundedButton:
                text: 'Femenino'
                on_press: root.save_gender("F")
            RoundedButton:
                text: 'Otro'
                on_press: root.save_gender("O")
    
<RoundedButton@Button>
	background_color: (1,1,1,0)
	background_normal: ''
	canvas.before:
		Color:
			rgb: utils.get_color_from_hex('#f590ca')
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [10]