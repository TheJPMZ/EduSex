
<Carrito>:
    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            size_hint: 1, .6
                
            BackgroundLabel:
                bold: True
                text: ''
                font_size: '20sp'
                color: 0,0,0,1
                size_hint: 1, .2
                background_color: 0.91, 0.68, 0.76, 1

            Image:
                size_hint: .5, .7
                source: 'images/compraC.png'

            Image:
                size_hint: .3, .4
                source: 'images/compra.png'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .1
                spacing: 10
            
            ScrollView:
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    padding: 50, 0 , 50 , 8
                    id: product
                    radius: .5
                    Label:
                        size_hint: 0, 1
                        size_y: 100
                        text: "product"
                        radius: .5
                        color: 0,0,0,1
                    
            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True
                id: contador
                spacing: 10
                padding: 300, 0, 300, 50
                Label:
                    size_hint: 0.5, 1
                    size_y: 100
                    text: "1"
                    radius: .5
                    color: 0,0,0,1

            BoxLayout:
                orientation: 'horizontal'
                spacing: 20
                #derecha arriba izquierda abajo
                padding: 250, 0, 250, 0
                size_hint: 1, .2

                Button:
                    id: btnMenos
                    background_normal: 'images/minus.png'
                    on_press: quitar()
           
                Button:
                    id: btnMas
                    background_normal: 'images/plus.png'
                    on_press: root.agregar()
                
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            #derecha arriba izquierda abajo
            padding: 50, 30, 50, 30
            size_hint: 1, .2

            RoundedButton:
                text: 'Regresar'
                on_press: root.manager.current = 'menu'
           
            RoundedButton:
                text: 'Comprar'
                on_press: root.save_gender("F")

<RoundedButton@Button>
	background_color: (1,1,1,0)
	background_normal: ''
    color: 0,0,0,1
	canvas.before:
		Color:
			rgb: utils.get_color_from_hex('#F8CAE2')
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [10]

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    color: 0,0,0,1

<Tile@RoundedButton>
	size_hint: None, None,
    size: 650, 150,
    font_size: '20sp'